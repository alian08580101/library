<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="JDBaseTheme">
        <item name="android:height">48dp</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="JDBaseTheme.MenuItemTheme">
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>
    </style>
    
    <style name="JDBaseTheme.ButtonTheme">
      <item name="android:background">@drawable/jd_button_selector</item>
      <item name="android:layout_marginBottom">5dp</item>
      <item name="android:layout_marginLeft">5dp</item>
      <item name="android:layout_marginRight">5dp</item>
      <item name="android:gravity">center</item>
      <item name="android:textSize">18sp</item>
    </style>
    <style name="JDBaseTheme.CheckBoxTheme">
      <item name="android:background">@drawable/jd_button_selector</item>
      <item name="android:layout_marginLeft">5dp</item>
      <item name="android:layout_marginRight">5dp</item>
      <item name="android:paddingLeft">35dp</item>
      <item name="android:gravity">center</item>
      <item name="android:textSize">18sp</item>
    </style>
    <style name="JDEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/jd_edittext_background</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
   <!--  <style name="JDBaseTheme.ButtonOption">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style> -->
    <style name="JDBaseTheme.JDTextViewTheme">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="JDTextEditViewHorizontalTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="JDBaseTheme.TextViewTheme">
        <item name="android:paddingLeft">5dp</item>
    </style>
</resources>
