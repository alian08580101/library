<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="labelText" format="string"/>
    <attr name="labelSize" format="dimension"/>
    <attr name="labelColor" format="dimension"/>
    <attr name="labelPosition">
        <enum name="left" value="0"/>
        <enum name="top" value="1"/>
        <enum name="right" value="2"/>
        <enum name="bottom" value="3"/>
    </attr>
    <attr name="gap" format="dimension"/>
    
    <attr name="editHint" format="string"/>
    <attr name="editStyle" format="reference"/>
    <attr name="editLeftDrawable" format="reference"/>
    <attr name="editTopDrawable" format="reference"/>
    <attr name="editRightDrawable" format="reference"/>
    <attr name="editBottomDrawable" format="reference"/>
    <attr name="dropArrowDrawable" format="reference"/>
    <attr name="dropEditable" format="boolean"/>
     
     <declare-styleable name="TextEditView">
         <attr name="labelText"/>
         <attr name="labelSize"/>
         <attr name="labelColor"/>
         <attr name="labelPosition"/>
     </declare-styleable>
     
     <declare-styleable name="DropDownView">
         <attr name="editHint" />
         <attr name="editStyle"/>
         <attr name="editLeftDrawable" />
         <attr name="editTopDrawable" />
         <attr name="editRightDrawable" />
         <attr name="editBottomDrawable" />
         <attr name="dropArrowDrawable" />
         <attr name="dropEditable"/>
     </declare-styleable>
</resources>
